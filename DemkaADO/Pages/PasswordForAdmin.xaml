<Page x:Class="DemkaADO.Pages.PasswordForAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemkaADO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordForAdmin" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Введите пароль для перехода в режим администратора" FontFamily="Tahoma" TextWrapping="Wrap" TextAlignment="Center"/>
            <PasswordBox x:Name="PwdBox" Width="120" Height="20" Margin="10"/>
            <Button Style="{StaticResource StyleBtn}" x:Name="EnterBtn" Content="Войти" Width="140" Click="EnterBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
